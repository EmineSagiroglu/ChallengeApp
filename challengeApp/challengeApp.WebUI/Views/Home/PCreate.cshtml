
@model ProductCreateModels
@{
    ViewData["Title"] = "PCreate";
}

<form asp-controller="Home" asp-action="PCreate" method="post">
    <div class="form-group">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
        <label asp-for="ProductImage">Product ImageUrl</label>
        <input asp-for="ProductImage" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="ProductPrice">Product Price</label>
        <input asp-for="ProductPrice" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="ProductDefinition">Product Definition</label>
        <input asp-for="ProductDefinition" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

